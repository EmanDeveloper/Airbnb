<style>
  .head{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .tex-info{
    display: none;
  }
  .text-togle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    text-align: center;
    padding: 0.5rem;
    margin: 1rem;
  }
  .all-list{
    padding: 1rem;
  }
</style>

<div class="head">
  <h1 class="all-list">All listing</h1>
  <div class="text-togle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after texes</label>
    </div>
  </div>
</div>
 

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(let list of listings) {%>
      <a href="/list/<%= list._id %>" class="list-link">
        <div class="card col list-card">
          <img src="<%= list.image.url %>" class="card-img-top" style="height: 18rem;" alt="...">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>
                <%= list.title %>
              </b>
              <br>
              Rs
              <%= list.price.toLocaleString("ur-PK") %> / night
              <i class="tex-info">&nbsp; +10% gst</i>
            </p>
          </div>
        </div>
      </a>
      <% }%>
  </div>

  <script>
    let pricetogel=document.getElementById("flexSwitchCheckDefault");
    pricetogel.addEventListener("click",()=>{
      let text_info=document.getElementsByClassName("tex-info");
      for(info of text_info){
        if(info.style.display !== "inline"){
        info.style.display="inline"
      }
      else{
        info.style.display="none"
      }
      }
    })
  </script>